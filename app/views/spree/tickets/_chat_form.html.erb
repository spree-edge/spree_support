<%= turbo_frame_tag 'dashboard_ticket_conversations_chat_form' do %>
  <%= form_with(model: [@ticket.conversations.new], url: conversations_ticket_path(@ticket),  data: { controller: "turbo-stream" }) do |form| %>

  <div class="row">
    <div class="col-2">
      <%= form.file_field :files, multiple: true, placeholder: 'Upload Files' %>
    </div>
    <div class="col-8">
      <%= form.text_field :message, placeholder: "Type your message here", class: 'w-100' %>
    </div>
    <div class="col-2">
      <%= form.submit "Send" %>
    </div>
  </div>
  <% end %>
<% end %>
