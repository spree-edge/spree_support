<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.text_field :customer_name, class: 'spree-flat-input', placeholder: 'Enter customer name' %>
  <%= f.label :customer_name, 'Customer Name' %>
</div>

<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.email_field :email, class: 'spree-flat-input', placeholder: 'Enter Email' %>
  <%= f.label :email, 'Email' %>
</div>
<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.text_field :title, class: 'spree-flat-input', placeholder: 'Title' %>
  <%= f.label :title, 'Title' %>
</div>

<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.select :category, category_list, { prompt: Spree.t(:category, scope: :shop) }, { class: 'form-control spree-flat-select' } %>
  <%= f.label :category, 'Category' %>
</div>

<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.text_field :order_no, class: 'spree-flat-input', placeholder: 'Order ID *' %>
  <%= f.label :order_no, 'Order No' %>
</div>
<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.phone_field :phone_number, class: 'spree-flat-input', placeholder: 'Enter Phone Number' %>
  <%= f.label :phone_number, 'Phone number' %>
</div>

<div class="form-group checkout-content-inner-field mb-5 has-float-label">
  <%= f.text_area :description, rows: 10 , class: 'spree-flat-input', placeholder: 'Description' %>
  <%= f.label :description, 'Description' %>
</div>

<div class="form-group checkout-content-inner-field mb-5">
  <%= f.file_field :files, multiple: true, class: 'spree-flat-input d-none', id: 'upload-file', placeholder: 'Upload Files' %>
  <label for='upload-file'>
    <div class='d-flex align-items-center bg-transparent add-attachment'>
      <%= image_tag('frontend-custom-upload.svg', alt: 'Add attachment', width: '24px', height: '24px') %>
      <%# <span>i</span> %>
      <p class="mb-0 ml-3">Add Attachment</p>
    </div>
  </label>
</div>

<%= f.hidden_field :user_id, value: spree_current_user.try(:id) %>
  