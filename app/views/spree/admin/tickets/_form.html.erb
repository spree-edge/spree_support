<div class="row">
  <div data-hook="new_product_sku" class="col-12">
    <%= f.field_container :title do %>
      <%= f.label :title, raw(Spree.t(:title) + required_span_tag) %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Here' %>
      <%= f.error_message_on :title %>
    <% end %>
  </div>

  <div data-hook="new_product_sku" class="col-12 col-md-4">
    <%= f.field_container :order_no do %>
      <%= f.label :order_no, raw(Spree.t(:order_no) + required_span_tag) %>
      <%= f.text_field :order_no, class: 'form-control', placeholder: 'Enter Here' %>
      <%= f.error_message_on :order_no %>
    <% end %>
  </div>
 
  <div class="col-12 col-md-4">
    <%= f.field_container :priority do %>
      <%= f.label :priority, raw(Spree.t(:priority) + required_span_tag) %>
      <%= f.select :priority, Spree::Ticket::PRIORITY.map { |priority | [ priority.titleize, priority ] }, { prompt: Spree.t(:select_priority) }, { class: 'form-control select2' } %>
      <%= f.error_message_on :priority %>
    <% end %>
  </div>

  <div data-hook="new_product_sku" class="col-12 col-md-4">
    <%= f.field_container :customer_name do %>
      <%= f.label :customer_name, raw(Spree.t(:customer_name) + required_span_tag) %>
      <%= f.text_field :customer_name, class: 'form-control' %>
      <%= f.error_message_on :customer_name %>
    <% end %>
  </div>
 
   <div data-hook="new_product_sku" class="col-12 col-md-4">
    <%= f.field_container :email do %>
      <%= f.label :email, raw(Spree.t(:email) + required_span_tag) %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>
  </div>

  <div class="col-12 col-md-4">
    <%= f.field_container :assignee_id do %>
      <%= f.label :assignee_id, raw(Spree.t(:assignee) + required_span_tag) %>
      <%= f.select :assignee_id, Spree::User.pluck(:email, :id), { include_blank: true }, { class: 'form-control select2' } %>
      <%= f.error_message_on :assignee_id %>
    <% end %>
  </div>

  <div data-hook="new_product_sku" class="col-12 col-md-4">
    <%= f.field_container :category do %>
      <%= f.label :category, raw(Spree.t(:category) + required_span_tag) %>
      <%= f.text_field :category, class: 'form-control' %>
      <%= f.error_message_on :category %>
    <% end %>
  </div>
 
  <div class="col-12 col-md-4">
    <%= f.field_container :status do %>
      <%= f.label :status, raw(Spree.t(:status) + required_span_tag) %>
      <%= f.select :status, Spree::Ticket::STATUS.map { |state| [ state.titleize, state ] }, {}, { class: 'form-control select2' } %>
      <%= f.error_message_on :status %>
    <% end %>
  </div>

  <div data-hook="new_product_sku" class="col-12 col-md-4">
    <%= f.field_container :phone_number do %>
      <%= f.label :phone_number, raw(Spree.t(:phone_number) + required_span_tag) %>
      <%= f.phone_field :phone_number, class: 'form-control' %>
      <%= f.error_message_on :phone_number %>
    <% end %>
  </div>

  <div class="col-12 col-md-4">
    <%= f.field_container :files do %>
      <%= f.label :files, raw(Spree.t(:files) + required_span_tag) %>
      <%= f.file_field :files, multiple: true %>
      <%= f.error_message_on :files %>
    <% end %>
  </div>

  <div class="col-12 col-md-8">
    <%= f.field_container :description do %>
      <%= f.label :description, raw(Spree.t(:description) + required_span_tag) %>
      <%= f.text_area :description, { rows: "5", class: "form-control" } %>
      <%= f.error_message_on :description %>
    <% end %>
  </div>
</div>
