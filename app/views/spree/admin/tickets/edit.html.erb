<% content_for :page_title do %>
  <a class="btn btn-outline-info mr-3 pr-1">
    <%= svg_icon name: 'chevron-left.svg', width: 15, height: 15%>
  </a>
  <%= @ticket.number %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @ticket } %>
<% content_for :page_tabs do %>
  <li class="nav-item">
    <%= link_to 'Ticket Infomation',
                spree.edit_admin_ticket_path(@ticket),
                class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to 'Conversation',
                conversations_admin_ticket_path(@ticket),
                class: "nav-link" %>
  </li>
<% end  %>

<%= form_for [:admin, @ticket] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <div class="mt-4">
      <%= render partial: 'spree/admin/shared/edit_resource_links' %>
    </div>
  </fieldset>
<% end %>
