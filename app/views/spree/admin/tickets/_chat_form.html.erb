<%= turbo_frame_tag 'admin_dashboard_ticket_conversations_chat_form' do %>
  <%= form_for [:admin, @ticket.conversations.new], url: conversations_admin_ticket_path(@ticket), data: { controller: "turbo-stream" } do |f| %>
    <fieldset>
      <div class="row">
        <div class="col-2">
          <%= f.file_field :files, multiple: true, placeholder: 'Upload Files', class: 'mt-4' %>
        </div>
        <div class="col-8">
          <%= f.field_container :message do %>
            <%= f.label :message, raw(Spree.t(:message) + required_span_tag) %>
            <%= f.text_area :message, { rows: "5", class: "form-control" } %>
            <%= f.error_message_on :message %>
          <% end %>
        </div>
        <div class="col-2">
          <%= button 'Send', 'save.svg', 'submit', { class: 'btn-success mt-4', data: { disable_with: "#{ Spree.t(:saving) }..." } } %>
        </div>
      </div>
    </fieldset>
  <% end %>
<% end %>
